{
    "*://*.hipchat.com/*": {
        "name": "Hipchat",
        "logout": {
            "cookies": ["rm"]
        },
        "login": {
            "urls": [
                "http://www.hipchat.com",
                "https://www.hipchat.com/sign_in",
                "https://www.hipchat.com/sign_in"
            ],
            "formURL": "https://www.hipchat.com/sign_in",
            "method": "POST",
            "usernameField": "email",
            "passwordField": "password",
            "hasHiddenInputs": false,
            "check": "a:contains('Sign out')"
        }
    }
}

