{
  "name": "Waltz",
  "version": "0.2.1",
  "manifest_version": 2,
  "description": "Forget About Your Accounts",
  "background": {
    "scripts": [
      "js/vendor/jquery.min.js",
      "/js/vendor/pubnub.js",
      "/js/background/crypto.js", 
      "/js/background/storage.js",
      "/js/vendor/aes.js",
      "/js/background/delegate.js"
    ]
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["js/vendor/jquery.min.js", "/js/client/waltz.js"],
    "css": ["/css/waltz.css"]
  }],
  "permissions": [
  	"*://*/*",
    "storage",
    "cookies",
    "tabs",
    "notifications",
    "contextMenus"
  ],
  "icons": {
    "16": "/img/waltz-16.png",
    "48": "/img/waltz-48.png",
    "128": "/img/waltz-128.png"
  },
  "options_page": "html/options.html",
  "homepage_url": "http://waltz.io",
  "web_accessible_resources": [
    "img/*"
  ]
}
